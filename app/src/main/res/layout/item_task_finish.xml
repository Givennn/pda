<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardUseCompatPadding="true"
    app:cardPreventCornerOverlap="false"
    xmlns:tools="http://schemas.android.com/tools">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/iv_header_bullet"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_header_bullet"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="12dp"
            android:layout_marginStart="12dp"
            app:layout_constraintStart_toStartOf="parent"/>
        <TextView
            android:id="@+id/tv_task_code"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toEndOf="@id/iv_header_bullet"
            app:layout_constraintTop_toTopOf="@id/iv_header_bullet"
            app:layout_constraintBottom_toBottomOf="@id/iv_header_bullet"
            app:layout_constraintEnd_toStartOf="@id/tv_plan_finish_date"
            android:layout_marginStart="8dp"
            app:layout_constraintHorizontal_chainStyle="spread_inside"
            tools:text="机器人001机器人001机器人001"

            android:ellipsize="end"
            style="@style/headerLineText"/>

        <TextView
            android:id="@+id/tv_plan_finish_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:text="计划完成时间：2019-01-22"
            style="@style/subHeaderLineText"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@id/tv_task_code"
            android:layout_marginEnd="12dp"
            app:layout_constraintBottom_toBottomOf="@id/tv_task_code"
            app:layout_constraintStart_toEndOf="@id/tv_task_code"/>

        <TextView
            android:id="@+id/tv_task_desc"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="@id/tv_task_code"
            app:layout_constraintTop_toBottomOf="@id/tv_task_code"
            app:layout_constraintEnd_toStartOf="@id/tv_task_progress"
            app:layout_constraintHorizontal_chainStyle="spread_inside"
            style="@style/contentText"
            android:layout_marginTop="12.5dp"
            tools:text="底座肩部 00001"/>

        <TextView
            app:layout_constraintStart_toEndOf="@id/tv_task_desc"
            app:layout_constraintEnd_toStartOf="@id/tv_task_sender"
            android:id="@+id/tv_task_progress"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="@id/tv_task_desc"
            app:layout_constraintBottom_toBottomOf="@id/tv_task_desc"

            tools:text="5/7"
            style="@style/contentText"/>

        <TextView
            android:id="@+id/tv_task_sender"
            android:layout_width="80dp"
            android:layout_height="wrap_content"
            style="@style/headerLineText"
            tools:text="张三"
            android:gravity="end"
            android:layout_marginEnd="12dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@id/tv_task_desc"
            app:layout_constraintBottom_toBottomOf="@id/tv_task_desc"
            app:layout_constraintStart_toEndOf="@id/tv_task_progress"/>
        <TextView
            android:id="@+id/tv_task_desc_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            style="@style/descText"
            android:layout_marginTop="8dp"
            android:text="@string/task_description"
            app:layout_constraintStart_toStartOf="@id/tv_task_code"
            app:layout_constraintTop_toBottomOf="@id/tv_task_desc"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="@id/tv_task_desc_label"
            app:layout_constraintStart_toStartOf="@id/tv_task_progress"
            app:layout_constraintEnd_toEndOf="@id/tv_task_progress"
            android:text="@string/already_report"
            style="@style/descText"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintEnd_toEndOf="@id/tv_task_sender"
            app:layout_constraintTop_toTopOf="@id/tv_task_desc_label"
            android:text="@string/reporter"
            style="@style/descText"/>
        <View android:id="@+id/v_divider"
            android:layout_height="1dp"
            android:layout_width="match_parent"
            style="@style/divider"
            android:layout_marginTop="16dp"
            app:layout_constraintTop_toBottomOf="@id/tv_task_desc_label"/>
        <com.google.android.material.button.MaterialButton
            android:id="@+id/btn_action"
            style="@style/actionButton"
            app:layout_constraintTop_toBottomOf="@id/v_divider"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_width="0dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_height="wrap_content"
            android:text="@string/task_finish"
            app:icon="@drawable/ic_action_finish"/>
    </androidx.constraintlayout.widget.ConstraintLayout>
</com.google.android.material.card.MaterialCardView>