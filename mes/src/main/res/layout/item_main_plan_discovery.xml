            android:id="@+id/tv_main_plan_num"
            android:layout_width="80dp"
            android:layout_height="wrap_content"
            style="@style/moduleTitleText"
            tools:text="10010"
            android:gravity="end"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@id/tv_main_plan_info"
            app:layout_constraintBottom_toBottomOf="@id/tv_main_plan_info"/>
        <TextView
            android:id="@+id/tv_product_info_label"
