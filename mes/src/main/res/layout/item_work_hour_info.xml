<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:paddingTop="10dp"
    android:orientation="vertical"
    android:paddingBottom="10dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/tv_skill_name"
        android:gravity="center"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/tv_main_plan_code"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="8dp"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            tools:text="绩效指标值：200"
            android:layout_weight="1"
            android:textSize="12sp"
            android:gravity="start"/>

        <TextView
            android:id="@+id/tv_work_order_code"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="8dp"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            tools:text="绩效：200"
            android:textSize="12sp"
            android:layout_weight="1"
            android:gravity="end"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/tv_skill_name"
        android:gravity="center"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/tv_dispatch_order_code"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="8dp"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            tools:text="绩效指标值：200"
            android:layout_weight="1"
            android:textSize="12sp"
            android:gravity="start"/>

        <TextView
            android:id="@+id/tv_dispatch_order_desc"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="8dp"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            tools:text="绩效：200"
            android:textSize="12sp"
            android:layout_weight="1"
            android:gravity="end"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/tv_skill_name"
        android:gravity="center"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/tv_work_hour"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="8dp"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            tools:text="绩效指标值：200"
            android:layout_weight="1"
            android:textSize="12sp"
            android:gravity="start"/>

        <TextView
            android:id="@+id/tv_rank"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="8dp"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            tools:text="绩效：200"
            android:textSize="12sp"
            android:layout_weight="1"
            android:gravity="end"/>
    </LinearLayout>

</LinearLayout>