<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".operation.fms.mission.TaskDetailFragment">

    <com.google.android.material.appbar.MaterialToolbar
        android:id="@+id/topAppBar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        app:title="@string/equipment_workorder_detail_title" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btn_confirm"
            style="@style/Widget.App.Button.confirm"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_gravity="center|bottom"
            android:layout_marginStart="12dp"
            android:layout_marginTop="24dp"
            android:layout_marginEnd="12dp"
            android:layout_marginBottom="12dp"
            android:text="@string/confirm" />

        <androidx.core.widget.NestedScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_above="@+id/btn_confirm">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">

                <!--工单详情——工单号-->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/bg_item_underline"
                    android:orientation="horizontal">

                    <TextView
                        style="@style/detailText.label"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/equipment_workorder_id" />

                    <TextView
                        android:id="@+id/tv_workorder_code"
                        style="@style/equipmentDetailTextView"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        tools:text="0011" />
                </LinearLayout>
                <!--工单详情-编号-->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/bg_item_underline"
                    android:orientation="horizontal">

                    <TextView
                        style="@style/detailText.label"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/equipment_workorder_bh" />

                    <TextView
                        android:id="@+id/tv_workorder_number"
                        style="@style/equipmentDetailTextView"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        tools:text="0011" />
                </LinearLayout>
                <!--工单详情-填报人-->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/bg_item_underline"
                    android:orientation="horizontal">

                    <TextView
                        style="@style/detailText.label"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/equipment_workorder_tbr" />

                    <TextView
                        android:id="@+id/tv_workorder_tbr"
                        style="@style/equipmentDetailTextView"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        tools:text="0011" />
                </LinearLayout>
                <!--工单详情-填报时间-->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/bg_item_underline"
                    android:orientation="horizontal">

                    <TextView
                        style="@style/detailText.label"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/equipment_workorder_tbtime" />

                    <TextView
                        android:id="@+id/tv_workorder_tbtime"
                        style="@style/equipmentDetailTextView"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        tools:text="0011" />
                </LinearLayout>
                <!--工单详情-名称-->
                <LinearLayout
                    android:id="@+id/ll_device_name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/bg_item_underline"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <TextView
                        style="@style/detailText.label"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/equipment_workorder_name" />

                    <TextView
                        android:id="@+id/tv_workorder_name"
                        style="@style/equipmentDetailTextView"
                        tools:text="0011" />

                    <ImageView
                        android:layout_width="12dp"
                        android:layout_height="12dp"
                        android:layout_marginStart="8dp"
                        android:src="@drawable/ic_arrow_right" />
                </LinearLayout>

                <!--工单详情-型号-->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/bg_item_underline"
                    android:orientation="horizontal">

                    <TextView
                        style="@style/detailText.label"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/equipment_workorder_marking" />

                    <TextView
                        android:id="@+id/tv_workorder_marking"
                        style="@style/equipmentDetailTextView"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        tools:text="0011" />
                </LinearLayout>
                <!--工单详情-部门-->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/bg_item_underline"
                    android:orientation="horizontal">

                    <TextView
                        style="@style/detailText.label"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/equipment_workorder_bm" />

                    <TextView
                        android:id="@+id/tv_workorder_group"
                        style="@style/equipmentDetailTextView"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        tools:text="0011" />
                </LinearLayout>
                <!--工单详情-位置-->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/bg_item_underline"
                    android:orientation="horizontal">

                    <TextView
                        style="@style/detailText.label"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/equipment_workorder_location" />

                    <TextView
                        android:id="@+id/tv_workorder_location"
                        style="@style/equipmentDetailTextView"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        tools:text="0011" />
                </LinearLayout>
                <!--工单详情-坐标-->
                <LinearLayout
                    android:id="@+id/ll_workorder_coordinate"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/bg_item_underline"
                    android:orientation="horizontal">

                    <TextView
                        style="@style/detailText.label"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/equipment_info_location" />

                    <TextView
                        android:id="@+id/tv_workorder_coordinate"
                        style="@style/equipmentDetailTextView"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        tools:text="0011" />
                </LinearLayout>
                <!--工单详情-类型-->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/bg_item_underline"
                    android:orientation="horizontal">

                    <TextView
                        style="@style/detailText.label"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/equipment_workorder_type" />

                    <TextView
                        android:id="@+id/tv_workorder_type"
                        style="@style/equipmentDetailTextView"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        tools:text="0011" />
                </LinearLayout>
                <!--工单详情-处理状态-->
                <LinearLayout
                    android:id="@+id/ll_workorder_status"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/bg_item_underline"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <TextView
                        style="@style/detailText.label"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/equipment_workorder_status" />

                    <TextView
                        android:id="@+id/tv_workorder_status"
                        style="@style/equipmentDetailTextView"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        tools:text="0011" />

                    <ImageView
                        android:layout_width="12dp"
                        android:layout_height="12dp"
                        android:layout_marginStart="8dp"
                        android:src="@drawable/ic_arrow_right" />
                </LinearLayout>
            </LinearLayout>
        </androidx.core.widget.NestedScrollView>
    </RelativeLayout>
</LinearLayout>