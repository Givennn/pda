<?xml version="1.0" encoding="utf-8"?><!--生产数-->
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/bg_item_underline"
    android:orientation="vertical"
    android:paddingHorizontal="16dp"
    android:paddingVertical="8dp">
    <!--生产次数-人员-->
    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/tv_count"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:textColor="@color/textSubHeaderLineColor"
            android:textSize="16sp"
            tools:text="1000次" />

        <TextView
            android:id="@+id/tv_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:gravity="end"
            android:includeFontPadding="false"
            android:textColor="@color/textRemarkColor"
            android:textSize="14sp"
            tools:ignore="RelativeOverlap"
            tools:text="张三" />

    </RelativeLayout>
    <!--总次数-时间-->
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="3dp">

        <TextView
            android:id="@+id/tv_totalcount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:textColor="@color/textRemarkColor"
            android:textSize="14sp"
            tools:text="总计1900次" />

        <TextView
            android:id="@+id/tv_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:gravity="end"
            android:includeFontPadding="false"
            android:textColor="@color/textRemarkColor"
            android:textSize="14sp"
            tools:ignore="RelativeOverlap"
            tools:text="2020-02-03 21:12" />

    </RelativeLayout>
</LinearLayout>
