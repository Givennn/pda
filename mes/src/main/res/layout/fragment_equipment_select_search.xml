<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <com.google.android.material.appbar.MaterialToolbar
        android:id="@+id/topAppBar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        app:title="@string/equipment_info" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:id="@+id/ll_select"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:id="@+id/ll_head_type"
            android:gravity="center">

            <TextView
                android:id="@+id/tv_head_type"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center"
                android:text="类型" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="3dp"
                android:src="@drawable/ic_arrow_down" />
        </LinearLayout>

        <View
            style="@style/divider"
            android:layout_width="1dp"
            android:layout_height="match_parent" />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:id="@+id/ll_head_status"
            android:gravity="center">

            <TextView
                android:id="@+id/tv_head_status"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center"
                android:text="状态" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="3dp"
                android:src="@drawable/ic_arrow_down" />
        </LinearLayout>

        <View
            style="@style/divider"
            android:layout_width="1dp"
            android:layout_height="match_parent" />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:id="@+id/ll_head_team"
            android:gravity="center">

            <TextView
                android:id="@+id/tv_head_team"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center"
                android:text="部门" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="3dp"
                android:src="@drawable/ic_arrow_down" />
        </LinearLayout>
    </LinearLayout>
    <View
        android:id="@+id/line_select"
        style="@style/divider"
        android:layout_height="1dp"
        android:layout_width="match_parent" />
    <!--搜索  支持扫码-->
    <RelativeLayout
        android:id="@+id/rl_top_search"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/search_bg_color"
        android:paddingStart="8dp"
        >

        <TextView
            android:id="@+id/til_search_bar_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:gravity="center_vertical"
            android:paddingStart="2dp"
            android:paddingEnd="10dp"
            android:textSize="15sp"
            android:layout_alignTop="@+id/til_search_bar"
            android:layout_alignBottom="@+id/til_search_bar"
            android:text="搜索"
            android:textColor="@color/text_field_search_bar_highlight" />

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/til_search_bar"
            style="@style/Widget.App.WhiteTextInputLayout.searchBar"
            android:layout_width="match_parent"
            android:layout_height="36dp"
            android:layout_margin="8dp"
            android:layout_toStartOf="@id/til_search_bar_btn"
            app:endIconTint="@color/text_field_icon"
            app:startIconDrawable="@drawable/ic_scan"
            app:startIconTint="@color/text_field_icon">

            <requestFocus />

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/et_search_bar"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="@string/task_scan_bar_hint"
                android:nextFocusDown="@id/et_search_bar"
                android:textColor="@color/text_field_search_bar_highlight"
                tools:text="" />
        </com.google.android.material.textfield.TextInputLayout>
    </RelativeLayout>
    <View
        android:id="@+id/line_search"
        style="@style/divider"
        android:layout_height="1dp"
        android:layout_width="match_parent" />
    <androidx.swiperefreshlayout.widget.SwipeRefreshLayout
        android:id="@+id/swipe"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rv_task_list"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:padding="10dp"
            app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
            tools:itemCount="3"
            tools:listitem="@layout/item_equipment_info" />
    </androidx.swiperefreshlayout.widget.SwipeRefreshLayout>

</LinearLayout>