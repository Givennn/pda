<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/cl_info"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="12dp">

        <TextView
            android:id="@+id/tv_log_type"
            style="@style/headerLineText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:ellipsize="end"
            android:gravity="top"
            android:includeFontPadding="false"
            android:maxWidth="240dp"
            app:layout_constraintEnd_toStartOf="@id/tv_log_time"
            app:layout_constraintHorizontal_chainStyle="spread_inside"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:text="机器人001机器人001机器" />

        <TextView
            android:id="@+id/tv_log_time"
            style="@style/subHeaderLineText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="end"
            android:includeFontPadding="false"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@id/tv_log_type"
            app:layout_constraintTop_toTopOf="parent"
            tools:text="计划完成时间：2019-01-22" />

        <TextView
            android:id="@+id/tv_log_info"
            style="@style/contentText"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="12.5dp"
            app:layout_constraintHorizontal_chainStyle="spread_inside"
            app:layout_constraintStart_toStartOf="@id/tv_log_type"
            app:layout_constraintTop_toBottomOf="@id/tv_log_type"
            tools:text="底座肩部 00001" />

    </androidx.constraintlayout.widget.ConstraintLayout>

    <View android:layout_height="1dp"
        android:layout_width="match_parent"
        style="@style/divider"/>
</LinearLayout>